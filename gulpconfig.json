{
    "browserSyncOptions" : {
      "proxy": "localhost/wordpress-base/",
      "notify": false
    },
    "browserSyncWatchFiles" : [
      "./css/*.min.css",
      "./js/*.min.js",
      "./src/sass/**/*.scss",
      "./**/*.php"
    ],
    "paths" : {
      "js": "./js",
      "css": "./css",
      "img": "./img",
      "imgsrc": "./src/img",
      "sass": "./src/sass",
      "jssrc": "./src/js",
      "node": "./node_modules/",
      "dev": "./src",
      "dist": "./dist",
      "vendor": ""
    }
  }